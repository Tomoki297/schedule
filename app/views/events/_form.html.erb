<%= form_with(model: event, local: true) do |form| %>
  <% if event.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(event.errors.count, "error") %> prohibited this event from being saved:</h2>

      <ul>
        <% event.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="actions">
    <div class = "label"><%= form.label :title, "予定" %></div>
    <%= form.text_field :title %>
    <div class = "label"><%= form.label :backgroundColor, "背景色" %></div>
    <%= form.select :backgroundColor, [["赤", "red"], ["青", "blue"], ["緑", "green"], ["黄", "yellow"]] %>
    <br>
    <%= form.label :allDay, "終日" %>
    <%= form.check_box 'allDay', {:checked => true }, true, false %>
    <br>
    <%= form.label :start, "予定開始時間" %>
    <%= form.datetime_select :start %>
    <br>
    <%= form.label :end, "予定終了時間" %>
    <%= form.datetime_select :end %>
    <br>
    <%= form.submit %>
  </div>
<% end %>
